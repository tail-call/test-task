{
    "manifest_version": 2,

    "name": "Super Extension",
    "description": "Это расширения показывает бесполезные сообщения на некоторых страницах.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["message-box.css"],
            "js": ["show-message.js"]
        }
    ],
    "permissions": [
        "storage"
    ]
}
